{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "js/*"
      ]
    }
  },
  "include": [
    "js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}